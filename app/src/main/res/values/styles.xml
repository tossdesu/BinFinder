<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BIN Info Activity -->
    <!-- CardView properties -->
    <style name="CardInfo" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- CardView content properties -->
    <style name="CardInfoContent">
        <item name="android:layout_margin">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- CardView text title -->
    <style name="CardInfoTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- CardView info text string -->
    <style name="CardInfoLine">
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>